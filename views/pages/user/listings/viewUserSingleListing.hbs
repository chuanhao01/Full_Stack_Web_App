<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <template
            v-if='listing'>
                <b-card
                :title='listing.title'
                :bg-variant='listing.availability ? "primary" : "success"'>
                    <b-card-text>
                        <span class="d-block font-weight-bold">Description</span>
                        <p>
                            \{{listing.description}}
                        </p>
                    </b-card-text>
                    <b-card-text>
                        <article>
                            <span class="font-weight-bold">Price: </span>
                            <span>
                                \{{listing.price}}
                            </span>
                        </article>
                        <article>
                            <span>Likes: \{{listing.num_likes}}</span>
                        </article>
                    </b-card-text>
                    <b-card-text>
                        <b-button variant='primary' :href='`/user/listing/picture/add/${listing.listing_id}`'>
                            Add an image to your listing
                        </b-button>
                    </b-card-text>
                    <b-card-text>
                        <b-button variant="warning" :href='`/user/listing/edit/${listing.listing_id}`'>Edit</b-button>
                        <b-button
                        @click='deleteListing(listing.listing_id)'
                        variant="danger">
                            Delete
                        </b-button>
                    </b-card-text>
                </b-card>
            </template>
        </div>
        <div 
        class="col-12 text-center"
        >
            <template
            v-if='listing && listing_pictures'>
                <b-card
                :title='`Showing pictures of ${listing.title}`'
                bg-variant='info'
                class="d-flex align-items-center"
                >
                    <b-card-body
                    style='width: 600px; height: 480px;'
                    >
                        <template>
                            <b-carousel
                            id="carousel-1"
                            v-model="slide"
                            :interval="4000"
                            no-animation
                            controls
                            indicators
                            background="#ababab"
                            img-width="600"
                            img-height="480"
                            style="text-shadow: 1px 1px 2px #333;"
                            @sliding-start="onSlideStart"
                            @sliding-end="onSlideEnd"
                            >
                                <!-- Text slides with image -->
                                <b-carousel-slide
                                v-for='listing_picture of listing_pictures'
                                :img-src='`/api/listing/picture/${listing_picture.listing_picture_file_name}`'
                                >
                                </b-carousel-slide>
                            </b-carousel>
                            <p class="mt-4">
                            Picture #: \{{ slide + 1 }}
                            </p>
                        </template>
                    </b-card-body>
                </b-card>
            </template>
        </div>
    </div>    
</main>

{{#section 'scripts'}}
<script>
    const app = new Vue({
        el: '#app',
        data: {
            listing: null,
            // listing_pictures is an arr, returned from the api
            listing_pictures: null,
            slide: 0,
            sliding: null
        },
        methods: {
            getListing(){
                const listing_id = window.location.pathname.split("/").pop();
                axios
                .get(`/api/listing/${listing_id}`)
                .then(
                    function(res){
                        this.listing = res.data.listing;
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err.response);
                    }
                )
            },
            deleteListing(listing_id){
                axios
                .delete(`/api/listing/${listing_id}`)
                .then(
                    function(res){
                        console.log(res);
                        document.location.pathname = '/user/listing';
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err);
                    }
                )
            },
            getListingPictures(){
                const listing_id = window.location.pathname.split("/").pop();
                axios
                .get(`/api/listing/pictures/${listing_id}`)
                .then(
                    function(res){
                        console.log(res);
                        this.listing_pictures = res.data.listing_pictures;
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err);
                    }
                )
            },
            // Methods for carousel
            onSlideStart(slide) {
                this.sliding = true
            },
            onSlideEnd(slide) {
                this.sliding = false
            }
        },
        created(){
            this.getListing();
            this.getListingPictures();
        }
    });
</script>
{{/section}}
