<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <template
            v-if='listing'>
                <b-card
                :title='listing.title'
                :bg-variant='listing.availability ? "primary" : "success"'>
                    <b-card-text>
                        <span class="d-block font-weight-bold">Description</span>
                        <p>
                            \{{listing.description}}
                        </p>
                    </b-card-text>
                    <b-card-text>
                        <article class="d-block">
                            <span class="font-weight-bold">Price: </span>
                            <span>
                                \{{listing.price}}
                            </span>
                        </article>
                        <article class="d-block">
                            <span class="font-weight-bold">By: </span>
                            <span>
                                \{{listing.listing_user_username}}
                            </span>
                        </article>
                    </b-card-text>
                    <b-card-text>
                        <template
                        v-if='offer_placed'>
                            <b-button variant="danger" :href='`/listing/offer/${listing.listing_id}`'>Edit your offering</b-button>
                        </template>
                        <template
                        v-else>
                            <b-button variant="warning" :href='`/listing/offer/${listing.listing_id}`'>Place an offering</b-button>
                        </template>
                    </b-card-text>
                </b-card>
            </template>

        </div>
        <div class="col-12 mt-3">
            <article class="d-block">
                <h3 class="d-block text-center">
                    Offers for this listing
                </h3>
            </article>
            <template
            v-if='offers'>
                <b-card
                v-for='offer in offers'
                :bg-variant='offer.status ? "warning" : "primary"'
                >
                    <b-card-text>
                        <article class="d-block">
                            <span class="font-weight-bold">Offer price: </span>
                            <span>
                                \{{offer.offer_price}}
                            </span>
                        </article>
                        <article class="d-block">
                            <span class="font-weight-bold">By: </span>
                            <span>
                                \{{offer.offer_user_username}}
                            </span>
                        </article>
                    </b-card-text>
                </b-card>
            </template>
        </div>
    </div>    
</main>

{{#section 'scripts'}}
<script>
    const app = new Vue({
        el: '#app',
        data: {
            listing: null,
            offers: null,
            offer_placed: null,
        },
        methods: {
            getListing(){
                const listing_id = window.location.pathname.split("/").pop();
                return axios.get(`/api/listing/${listing_id}`)
                .then(
                    function(res){
                        this.listing = res.data.listing;
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err.response);
                        throw 'GET_ERR';
                    }
                )
            },
            getOffers(){
                const listing_id = window.location.pathname.split("/").pop();
                return axios.get(`/api/offer/${listing_id}`)
                .then(
                    function(res){
                        this.offers = res.data.offers
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err);
                        throw 'GET_ERR';
                    }
                )
            },
            checkOfferMade(){
                const listing_id = window.location.pathname.split("/").pop();
                return axios
                .get(`/api/offer/check/${listing_id}`)
                .then(
                    function(res){
                        console.log(res)
                        this.offer_placed = res.data.offer_placed;
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err.response);
                    }
                )
            }
        },
        created(){
            this.getListing();
            this.getOffers();
            this.checkOfferMade();
        }
    });
</script>
{{/section}}
